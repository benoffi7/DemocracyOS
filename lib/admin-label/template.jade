- var prepend = forum ? ('/' + forum.name) : ''

#labels-wrapper
  .labels-admin
    .row.well.well-lg
      .col-xs-12.col-md-2
        a.btn.btn-success.btn-block.new(href='#{prepend}/admin/labels/create')
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin-labels.list.add-label')
      .col-xs-12.col-md-7
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder='#{t("admin-labels.list.search.placeholder")}', autofocus)
      .col-md-3.col-xs-12.text-center
        .btn-group
          span.sort-label.pull-left=t('admin-userlist.list.sort')
          button.btn.btn-primary.sort(data-sort='label-title')
            span.glyphicon.glyphicon-sort
    .row
      .list.list-group
        - each label in labels
          a.list-group-item(href="#{prepend}/admin/labels/" + label.id, data-labelid=label.id)
            span.label-title=label.name
            if label.hash != config.defaultlabel
              if label.deletedAt == null
                button.btn.btn-default.pull-right.delete-label
                  span.glyphicon.glyphicon-remove-circle            
              else
                button.btn.btn-default.pull-right.reactive-label
                  span.glyphicon.glyphicon-ok-circle