- var prepend = forum ? ('/' + forum.name) : ''

#projectstypes-wrapper
  .projectstypes-admin
    .row.well.well-lg
      .col-xs-12.col-md-2
        a.btn.btn-success.btn-block.new(href='#{prepend}/admin/projectstypes/create')
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin-projectstypes.list.add-projecttype')
      .col-xs-12.col-md-7
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder='#{t("admin-projectstypes.list.search.placeholder")}', autofocus)
      .col-md-3.col-xs-12.text-center
        .btn-group
          span.sort-label.pull-left=t('admin-userlist.list.sort')
          button.btn.btn-primary.sort(data-sort='projecttype-title')
            span.glyphicon.glyphicon-sort
    .row
      .list.list-group
        - each projecttype in projectstypes
          a.list-group-item(href="#{prepend}/admin/projectstypes/" + projecttype.id, data-projecttypeid=projecttype.id)
            span.projecttype-title=projecttype.name
            if projecttype.hash != config.defaultProjectType
              if projecttype.deletedAt == null
                button.btn.btn-default.pull-right.delete-projecttype
                  span.glyphicon.glyphicon-remove-circle            
              else
                button.btn.btn-default.pull-right.reactive-projecttype
                  span.glyphicon.glyphicon-ok-circle