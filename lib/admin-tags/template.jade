- var prepend = forum ? ('/' + forum.name) : ''

#tags-wrapper
  .tags-admin
    .row.well.well-lg
      .col-xs-12.col-md-2
        a.btn.btn-success.btn-block.new(href='#{prepend}/admin/tags/create')
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin-tags.list.add-tag')
      .col-xs-12.col-md-7
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder='#{t("admin-tags.list.search.placeholder")}', autofocus)
      .col-md-3.col-xs-12.text-center
        .btn-group
          span.sort-label.pull-left=t('admin-userlist.list.sort')
          button.btn.btn-primary.sort(data-sort='tag-title')
            span.glyphicon.glyphicon-sort
    .row
      .list.list-group
        - each tag in tags
          a.list-group-item(href="#{prepend}/admin/tags/" + tag.id, data-tagid=tag.id)
            span.tag-title=tag.name
            if tag.hash != config.defaultTag
              if tag.deletedAt == null
                button.btn.btn-default.pull-right.delete-tag
                  span.glyphicon.glyphicon-remove-circle            
              else
                button.btn.btn-default.pull-right.reactive-tag
                  span.glyphicon.glyphicon-ok-circle
