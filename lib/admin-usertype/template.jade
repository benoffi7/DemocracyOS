- var prepend = forum ? ('/' + forum.name) : ''

#userstypes-wrapper
  .userstypes-admin
    .row.well.well-lg
      .col-xs-12.col-md-2
        a.btn.btn-success.btn-block.new(href='#{prepend}/admin/userstypes/create')
          span.glyphicon.glyphicon-plus
          = ' ' + t('admin-userstypes.list.add-usertype')
      .col-xs-12.col-md-7
        .input-group.input-group-md
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.search(type='text', placeholder='#{t("admin-userstypes.list.search.placeholder")}', autofocus)
      .col-md-3.col-xs-12.text-center
        .btn-group
          span.sort-label.pull-left=t('admin-userlist.list.sort')
          button.btn.btn-primary.sort(data-sort='usertype-title')
            span.glyphicon.glyphicon-sort
    .row
      .list.list-group
        - each usertype in userstypes
          a.list-group-item(href="#{prepend}/admin/userstypes/" + usertype.id, data-usertypeid=usertype.id)
            .image-container.image-usertype.pull-left
              img(src=usertype.image, width="65")
            span.usertype-title=usertype.name
            if usertype.hash != config.defaultUserType
              if usertype.deletedAt == null
                button.btn.btn-default.pull-right.delete-usertype
                  span.glyphicon.glyphicon-remove-circle            
              else
                button.btn.btn-default.pull-right.reactive-usertype
                  span.glyphicon.glyphicon-ok-circle